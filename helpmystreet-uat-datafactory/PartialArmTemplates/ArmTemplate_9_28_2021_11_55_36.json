{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "helpmystreet-uat-datafactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/FullCopyPipelineMySqlMonthlyStats')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "FullCopyActivity",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "AzureSqlSource",
								"sqlReaderQuery": "  SELECT\t[GroupName] AS [Group Name]\n\t\t\t,ISNULL([Subgroup],'-') AS [Subgroup]\n\t\t\t,[Members] AS [New Members]\n\t\t\t,[Admins] AS [New Admins]\n\t\t\t,[ActiveVols] AS [Active Vols]\n\t\t\t,[NonMemberVols] AS [Non-Member Vols]\n\t\t\t,[YotiIDs] AS [New Yotis]\n\t\t\t,ISNULL([OtherCredentials],0) AS [New Non-Yoti Credentials]\n\t\t\t,[Requests] AS [New Requests]\n\t\t\t,[Jobs] AS [New Jobs]\n\t\t\t,[Jobs_Cancelled] AS [% New Jobs Cancelled]\n\t\t\t,[Jobs_Completed] AS [% New Jobs Completed]\n\t\t\t,[Jobs_Overdue] AS [% New Jobs Overdue]\n\t\t\t,[TopActivities] AS [Top Activities]\n\tFROM\t[Analysis].[viewMonthlyStats_MonthToDate]",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "AzureMySqlSink",
								"writeBatchSize": 10000,
								"writeBatchTimeout": "00:00:30"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "Group Name",
											"type": "String"
										},
										"sink": {
											"name": "GroupName",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "Subgroup",
											"type": "String"
										},
										"sink": {
											"name": "SubGroup",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "New Members",
											"type": "Int32"
										},
										"sink": {
											"name": "NewMembers",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "New Admins",
											"type": "Int32"
										},
										"sink": {
											"name": "NewAdmins",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "Active Vols",
											"type": "Int32"
										},
										"sink": {
											"name": "ActiveVols",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "Non-Member Vols",
											"type": "Int32"
										},
										"sink": {
											"name": "NonMemberVols",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "New Yotis",
											"type": "Int32"
										},
										"sink": {
											"name": "NewYotis",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "New Non-Yoti Credentials",
											"type": "Int32"
										},
										"sink": {
											"name": "NewNonYotiCredentials",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "New Requests",
											"type": "Int32"
										},
										"sink": {
											"name": "NewRequests",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "New Jobs",
											"type": "Int32"
										},
										"sink": {
											"name": "NewJobs",
											"type": "Int32"
										}
									},
									{
										"source": {
											"name": "% New Jobs Cancelled",
											"type": "String"
										},
										"sink": {
											"name": "PercentNewJobsCancelled",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "% New Jobs Completed",
											"type": "String"
										},
										"sink": {
											"name": "PercentNewJobsCompleted",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "% New Jobs Overdue",
											"type": "String"
										},
										"sink": {
											"name": "PercentNewJobsOverdue",
											"type": "String"
										}
									},
									{
										"source": {
											"name": "Top Activities",
											"type": "String"
										},
										"sink": {
											"name": "TopActivities",
											"type": "String"
										}
									}
								]
							}
						},
						"inputs": [
							{
								"referenceName": "SourceAnalysisMonthlyStatsDataset",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "SinkMySqlAnalysisMonthlyStats",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceAnalysisMonthlyStatsDataset')]",
				"[concat(variables('factoryId'), '/datasets/SinkMySqlAnalysisMonthlyStats')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SinkMySqlAnalysisMonthlyStats')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureMySql1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureMySqlTable",
				"schema": [
					{
						"name": "ID",
						"type": "int",
						"precision": 0,
						"scale": 0
					},
					{
						"name": "ReferringGroupId",
						"type": "int",
						"precision": 0,
						"scale": 0
					}
				],
				"typeProperties": {
					"tableName": "monthlystats"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceAnalysisMonthlyStatsDataset')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "DestinationLinkedService",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "ID",
						"type": "int",
						"precision": 10
					},
					{
						"name": "GroupName",
						"type": "varchar"
					},
					{
						"name": "ParentGroupID",
						"type": "int",
						"precision": 10
					},
					{
						"name": "GroupKey",
						"type": "varchar"
					}
				],
				"typeProperties": {
					"schema": "Analysis",
					"table": "viewMonthlyStats_MonthToDate"
				}
			},
			"dependsOn": []
		}
	]
}